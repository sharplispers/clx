
(in-package :xlib)

(defmacro define-card8-abrev (name)
  `(define-accessor ,name (8)
     ((index) `(read-card8 ,index))
     ((index thing) `(write-card8 ,index ,thing))))

(defmacro define-card16-abrev (name)
